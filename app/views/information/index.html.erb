<%= render 'home/navbar' %>

<div class="container">
  <table id="info-table" class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Street</th>
        <th>City/Town</th>
        <th>Province</th>
        <th>Contact Person</th>
        <th>Contact Number</th>
      </tr>
    </thead>
    
    <tbody>
      <% @infos.each do |info| %>
      <tr>
        <td><%= link_to info.created_at.to_date, information_path(info.id) %></td>
        <td><%= info.last_name %></td>
        <td><%= info.first_name %></td>
        <td><%= info.street_one %></td>
        <td><%= info.city %></td>
        <td><%= info.province %></td>
        <td><%= info.contact_person %></td>
        <td><%= info.contact_phone %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
</div>